<div id="<%= dom_id article %>" class="mb-2">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to article.title, article_path(article) %>
      </h5>
      <div class="card-text">
        <%= article.content %>
      </div>
      <p>
        <strong>Author:</strong>
        <%= article.user&.email %>
      </p>
    </div>
  </div>
</div>
