<form action="<%= root_path %>">
  <div class="input-group">
    <input type="text" name="q" value="<%= params[:q] %>" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
  </div>
  <div class="py-1">
    <span class="text-muted fs-6 fw-light">Found: <%= items.total_entries %></span>
  </div>
</form>
