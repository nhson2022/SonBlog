<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row py-4">
		<div class="col">
			<h1>Categories</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New category", new_category_path, class: 'btn btn-primary' %>
		</div>
	</div>
</div>
<div id="categories">
	<% @categories.each do |category| %>
		<%= render category %>
		<p>
			<%= link_to "Show this category", category %>
		</p>
	<% end %>
</div>
